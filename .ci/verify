set -euo pipefail

PROJECT_ROOT="$(realpath $(dirname $0)/..)"
source "$PROJECT_ROOT/.ci/ensure-go"
"$PROJECT_ROOT/.ci/ensure-make"

(
  cd "${PROJECT_ROOT}"

  make verify
  make test
)
